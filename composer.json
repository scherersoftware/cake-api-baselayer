{
    "name": "scherersoftware/cake-api-baselayer",
    "description": "API convenience plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^1.7",
        "scherersoftware/coding-standard": "4.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "CakeApiBaselayer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeApiBaselayer\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "check": [
            "@php-check",
            "@phpstan",
            "@phpunit"
        ],
        "php-check": "vendor/bin/phpcs --colors -p --standard=vendor/scherersoftware/coding-standard/scherersoftware ./src",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -l 5 ./src",
        "phpunit": "vendor/bin/phpunit --coverage-clover=coverage.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
